<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Button Styles -->
    <style name="BaseButton">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="NumberButton" parent="BaseButton">
        <item name="android:background">@color/number_button</item>
        <item name="android:textColor">@color/number_button_text</item>
    </style>

    <style name="OperatorButton" parent="BaseButton">
        <item name="android:background">@color/operator_button</item>
        <item name="android:textColor">@color/operator_button_text</item>
    </style>

    <style name="FunctionButton" parent="BaseButton">
        <item name="android:background">@color/function_button</item>
        <item name="android:textColor">@color/function_button_text</item>
    </style>

    <style name="EqualsButton" parent="BaseButton">
        <item name="android:background">@color/equals_button</item>
        <item name="android:textColor">@color/equals_button_text</item>
    </style>

</resources>